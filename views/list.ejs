<%- include("header") -%>

<div class="box1" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box1">
    <% var length = newListItems.length; %>
    <% for(var i=0;i<length;i++) { %>
        <div class="item">
            <input type="checkbox">
            <p><%= newListItems[i] %></p>
        </div>
    <% } %>

<form class="item" action="/" method="post">
    <input type="text" id="userInput" name="newItem" placeholder="New Item" autocomplete="off"/>
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
</form>
</div>

<div class="box2">
    <form action="/reset" method="post">
        <button type="submit" name="list" value="<%= listTitle %>">Reset</button>
    </form>
</div>
        
<%- include("footer") -%>